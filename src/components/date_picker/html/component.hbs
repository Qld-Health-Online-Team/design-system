{{#with component.data}}
    <div class="qld__form-group">
        <label class="qld__label" for="{{metadata.name.value}}">{{metadata.name.value}}</label>
        {{#if metadata.hint}}
        <em class="sq-form-question-note qld__hint-text">{{metadata.hint.value}}</em>
        {{/if}}
        <div class="flatpickr flatpickr--{{metadata.mode.value}}">
                <input
                    type="text"
                    class="qld__text-input"
                    id="{{metadata.name.value}}"
                    name="{{metadata.name.value}}"
                    {{#if metadata.min_date.value}}data-min-date="{{metadata.min_date.value}}"{{/if}}
                    {{#if metadata.max_date.value}}data-max-date="{{metadata.max_date.value}}"{{/if}}
                    data-mode="{{#if metadata.mode.value}}{{metadata.mode.value}}{{else}}single{{/if}}"
                    data-format="{{#if metadata.date_format.value}}{{metadata.date_format.value}}{{else}}d/m/Y{{/if}}"
                    data-default-date="{{#if metadata.default_date.value}}{{metadata.default_date.value}}{{else}}today{{/if}}"
                    required
                >
                {{#ifCond metadata.mode.value '===' 'multiple'}}
                    <div class="date-list"></div>
                {{/ifCond}}
                <button type="button" class="date-button date-activate" title="Open date picker">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M152 64H296V24C296 10.75 306.7 0 320 0C333.3 0 344 10.75 344 24V64H384C419.3 64 448 92.65 448 128V448C448 483.3 419.3 512 384 512H64C28.65 512 0 483.3 0 448V128C0 92.65 28.65 64 64 64H104V24C104 10.75 114.7 0 128 0C141.3 0 152 10.75 152 24V64zM48 448C48 456.8 55.16 464 64 464H384C392.8 464 400 456.8 400 448V192H48V448z"/></svg>
                </button>
        </div>
    </div>
{{/with}}